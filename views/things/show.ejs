</div>
  <link rel='stylesheet' href='/stylesheets/style.css' />
  

  <body>

<img class="picture" width="700px" src="<%= thing.image %>">
<section id="show-page">

<div><%= thing.name %></div>
<div><%= thing.introduction %></div>
<div><%= thing.address %></div>
<div><%= thing.hours %></div>
</section>



<br><br>
<h2 class="comment">Comments</h2>
<!-- action="/things/<%# thing._id %>/reviews" -->
<% if (user) { %>
  <form id="add-review-form" method="POST">
    <textarea name="content" placeholder="Add a comment..."></textarea>
    <br>
    <label>Rating:</label>
    <select name="rating">
      <option value="1">1</option>
      <option value="2">2</option>
      <option value="3">3</option>
      <option value="4">4</option>
      <option value="5">5</option>
    </select>
    <br>
    <input type="submit" value="Comment">
  </form>
  <% } %>

  <% if (reviews) { %>
    <table>
      <tbody>
        <% let total=0 %>
          <% thing.reviews.forEach(function(r) { %>
            <% total +=r.rating %>
              <tr>
                <td class="review-user"><img alt="avatar" src="<%= r.userAvatar %>"><%= r.userName %></td>
                <td>
                  <%= r.content %>
                </td>
                <td>
                  <%= r.rating %>
                </td>
                <td>
                  <% if (user && user._id.equals(r.user)) { %>
                    <form action="/reviews/<%= r._id %>?_method=DELETE" method="POST">
                      <button type="submit">X</button>
                    </form>
                  <% } %>
                </td>
              </tr>
              <% }); %>

      </tbody>
    </table>
    <% } else { %>
      <h6>No comments</h6>
      <% } %>

    </body>